                {% endfor %}
            </table>

            <td><button><a href="{{ path("panier_buy") }}">Commander</a></button></td>
            <td><button><a href="{{ path("panier_clear") }}">Vider</a></button></td>
        </form>
    </div>
{% endblock %}
